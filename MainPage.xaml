<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ramu"
             xmlns:components="clr-namespace:ramu.Components"
             x:Class="ramu.MainPage">

    <VerticalStackLayout>
        <Picker x:Name="languagePicker" Title="Select Language" />
        <Button x:Name="recordAudioButton" Text="Ask Ramu" Clicked="OnRecordAudioClicked" />
        <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
            <BlazorWebView.RootComponents>
                <RootComponent Selector="#app" ComponentType="{x:Type components:Routes}" />
            </BlazorWebView.RootComponents>
        </BlazorWebView>
    </VerticalStackLayout>

</ContentPage>
